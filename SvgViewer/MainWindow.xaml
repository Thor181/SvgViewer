<Window x:Class="SvgViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvgViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Margin="2" >
            <TextBlock Text="Директория" VerticalAlignment="Center"></TextBlock>
            <TextBox x:Name="DirectoryPathTextbox" d:Text="d:/path/to/file.svg" HorizontalAlignment="Stretch" Margin="3" TextChanged="DirectoryPathTextbox_TextChanged"></TextBox>
        </DockPanel>
        <CheckBox x:Name="InnerDirectoriesCheckbox" IsChecked="False" Grid.Column="1" Content="С вложением" VerticalAlignment="Center" Width="110"></CheckBox>
        <ScrollViewer Grid.Row="1" Margin="5" Grid.ColumnSpan="2">
            <WrapPanel x:Name="MainWrapPanel"  />
        </ScrollViewer>



    </Grid>
</Window>
