<Window x:Class="SvgViewer.V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvgViewer.V2"
        xmlns:vm="clr-namespace:SvgViewer.V2.ViewModels"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:views="clr-namespace:SvgViewer.V2.Views"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        x:Name="MainWindowX">

    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>

        <!--HEADER-->
        <Grid Grid.Row="0"
              d:Background="LightCoral">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                <ColumnDefinition Width="0.6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0"
                        Margin="5">
                <hc:TextBox d:Text="path/here/to/image/directory"
                            hc:InfoElement.Placeholder="Directory"
                            VerticalContentAlignment="Center"
                            Height="25"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Margin="5">
                <!--<TextBlock Text="Search"></TextBlock>-->
                <hc:TextBox Grid.Column="1"
                            hc:InfoElement.Placeholder="Search"
                            VerticalContentAlignment="Center"
                            Height="25"></hc:TextBox>
            </StackPanel>

            <StackPanel Grid.Column="4"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Margin="0 0 5 0">
                <CheckBox VerticalAlignment="Center">
                    <CheckBox.RenderTransform>
                        <ScaleTransform ScaleX="1.5"
                                        ScaleY="1.5"
                                        CenterY="8"></ScaleTransform>
                    </CheckBox.RenderTransform>
                </CheckBox>

                <TextBlock Margin="15 0 0 0"
                           Text="Subfolders"
                           VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Grid>

        <!--CONTENT-->
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <ItemsControl ItemsSource="{Binding Cards}"
                              Margin="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:CardView Card="{Binding}"
                                            Margin="5"
                                            ClickCommand="{Binding Path=DataContext.ClickCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                                            ClickCommandParameter="{Binding}"
                                            Cursor="Hand">
                            </views:CardView>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <Grid Grid.Column="1"
                  d:Background="AliceBlue">
            </Grid>

        </Grid>

        <!--FOOTER-->
        <Grid Grid.Row="2"
              d:Background="LightYellow">
            <TextBlock HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="5">
                <Run Text="Count: "></Run>
                <Run Text="{Binding Cards.Count, Mode=OneWay}"></Run>
            </TextBlock>
        </Grid>

    </Grid>
</Window>
